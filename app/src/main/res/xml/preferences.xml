<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <ListPreference
        android:key="pref_units"
        android:title="@string/units"
        android:dialogTitle="@string/units"
        android:summary="@string/units_summary"
        android:entries="@array/units_array"
        android:entryValues="@array/units_array"
        android:defaultValue="@string/imperial" />

    <PreferenceCategory
        android:title="@string/trip_creation"
        android:key="pref_key_trip_creation_settings">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="default_tank_filled"
            android:summary="@string/default_filled_summary"
            android:title="@string/default_filled" />

    </PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>