<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Light Indigo -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Dark Indigo -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Blue -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppToolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextColor">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/menuTextAppearance</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="menuTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TripListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/black</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="settings_header">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="stats_header">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="card_style">
        <item name="android:layout_margin">10dp</item>
        <item name="contentPadding">10dp</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
